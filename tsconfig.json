{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		/* Additional Checks */
		// "noImplicitReturns": true,
		// "noFallthroughCasesInSwitch": true,
		// "noUnusedParameters": true,
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "coverage", "src/**/*.test.ts"]
}
